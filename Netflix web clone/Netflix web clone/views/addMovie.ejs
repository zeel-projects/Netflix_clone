<html lang="en" dir="ltr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Add Movieaurant</title>
  </head>
  <style>
    @import url("https://fonts.googleapis.com/css?family=Poppins:400,500,600,700&display=swap");
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: "Poppins", sans-serif;
    }
    body {
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      background: #F4EAD5;
    }
    .wrapper {
      position: relative;
      max-width: 430px;
      width: 100%;
      background: #DAE2B6;
      padding: 34px;
      border-radius: 6px;
      box-shadow: 0 5px 10px rgba(0, 0, 0, 0.2);
    }
    .wrapper h2 {
      position: relative;
      font-size: 22px;
      font-weight: 600;
      color: #333;
    }
    .wrapper h2::before {
      content: "";
      position: absolute;
      left: 0;
      bottom: 0;
      height: 3px;
      width: 0px;
      border-radius: 50px;
      background: #1b2625;
      transition: .5s;
    }
    .wrapper h2::before {
      content: "";
      position: absolute;
      left: 0;
      bottom: 0;
      height: 3px;
      width: 30px;
      border-radius: 50px;
      background: #1b2625;
      transition: .5s;
    }
    .wrapper:hover h2::before{
      
      width: 175px;
  
    }
    .wrapper form {
      margin-top: 30px;
    }
    .wrapper form .input-box {
      height: 52px;
      margin: 18px 0;
    }
    form .input-box input {
      height: 100%;
      width: 100%;
      outline: none;
      padding: 0 15px;
      font-size: 17px;
      font-weight: 400;
      color: #333;
      border: 1.5px solid #4E6C50;
      border-bottom-width: 2.5px;
      border-radius: 6px;
      transition: all 0.3s ease;
    }
    .input-box input:focus,
    .input-box input:valid {
      border-color: #395144;
    }
    form .policy {
      display: flex;
      align-items: center;
    }
    form h3 {
      color: #707070;
      font-size: 14px;
      font-weight: 500;
      margin-left: 10px;
    }
    .input-box.button input {
      color: #fff;
      letter-spacing: 1px;
      border: none;
      background: #395144;
      cursor: pointer;
    }
    .input-box.button input:hover {
      background: #1b2625;
    }
    form .text h3 {
      color: #333;
      width: 100%;
      text-align: center;
    }
    form .text h3 a {
      color: #4070f4;
      text-decoration: none;
    }
    form .text h3 a:hover {
      text-decoration: underline;
    }
  </style>
  <body>
    <div class="wrapper">
      <h2>Add Movie</h2>
      <form action="/v1/Movie/add" method="post">
        <div class="input-box">
          <input type="text" placeholder="MovieName" name="MovieName" required />
        </div>
        <div class="input-box">
          <input type="text" placeholder="Type" name="Type" required />
        </div>
        <div class="input-box">
            <input type="number   " placeholder="AgeLimit" name="AgeLimit" required />
        </div>
        <div class="input-box">
          <input type="number" placeholder="Charges" name="charges" required />
        </div>
        <div class="input-box">
          <input
            type="text"
            placeholder="Description"
            name="description"
            required/>
        </div>
       
        <div class="input-box button">
          <input type="Submit" value="Register Now"/>
        </div>
      </form>
    </div>
  </body>
</html>
